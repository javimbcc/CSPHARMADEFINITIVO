@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Layouts/_LoginLayout.cshtml";
}


<div class="col-xs-1 center-block align-content-center text-center align-items-center justify-content-center align-middle h-100 ">
    <div class="mb-3">
        <h1>Acceso</h1>
    </div>
    <div>
        <form method="post">
            <input class="mb-2 border-2 text-info border border-info" type="number" name="name" id="name" maxlength="0" placeholder="Codigo de empleado" /><br />
            <input class="mb-2 border-2 text-info border border-info" type="password" name="password" id="password" maxlength="7" placeholder="Contraseña" /><br />
            <button class="btn btn-light text-black border-2 text-light" type="submit"> >> </button>
        </form>
    </div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Registro" asp-action="Registro">Logueate si ya tienes cuenta</a>
</div>

